doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Daycare Footer
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  link(rel='stylesheet' href='css/style.css')
  style.
    footer {
    background-image: linear-gradient(to right top, #2f0e53, #2c175a, #281f61, #242668, #1e2d6e, #153776, #09417c, #004b82, #005a86, #006784, #00727e, #1c7c76);
    padding: 20px 0;
    position: relative;
    }
    .footer-text {
    color: white;
    margin-bottom: 20px;
    }
    .social-icons {
    font-size: 24px;
    margin-right: 15px;
    color: #d4d9e0;
    transition: transform 0.3s ease; /* Apply transition effect to transform */
    }
    .social-icons:hover {
    color:rgb(109, 226, 226);
    transform: scale(1.2); /* Scale up to 120% on hover (zoom in effect) */
    }
    .btn {
    transition: transform 0.3s ease; /* Apply transition effect to transform */
    }
    .btn:hover {
    transform: scale(1.1); /* Scale up to 110% on hover (zoom in effect) */
    }
    .footer-link {
    transition: transform 0.3s ease; /* Apply transition effect to transform */
    display: inline-block;
    color: white;
    }
    .footer-link:hover {
    color: white;
    text-decoration: solid;
    transform: scale(1.5); /* Scale up to 110% on hover (zoom in effect) */
    }
    .copy-right {
    position: absolute;
    bottom: 10px;
    width: 85%;
    text-align: center;
    color: #f3ebeb;
    }
// Footer
footer.text-center
  .container
    .row
      .col-md-4.mb-4
        h5#lead.footer-text
        a.footer-link(href='/') About
        br
        a.footer-link(href='../views/dollstall.html') Dollstall
        br
        a.footer-link(href='/login') Login
        br
      // Contact Information
      .col-md-4.mb-4
        h5#lead.footer-text Contact Us
        p#para.footer-text
          | DayStar Daycare St,
          br
          | City, Kabalagala
        p#para.footer-text
          | Phone: 123-456-7890
          br
          | Email: daystar@example.com
      // Social Media Icons
      .col-md-4.mb-4
        h5#lead.footer-text Follow Us
        a.social-icons(href='#')
          i.fab.fa-facebook
        a.social-icons(href='#')
          i.fab.fa-twitter
        a.social-icons(href='#')
          i.fab.fa-instagram
    .copy-right
