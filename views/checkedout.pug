doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Checked Out Babies
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(rel='stylesheet' href='/css/style.css')
style.
     table th,
     table td {
     border: 1px solid #ddd;
     padding: 8px;
     width:auto;
     text-align: center;
     }
     table th {
     background-color: #f2f2f2;
     }
     table {
     width: 100%;
     border-collapse: collapse;
     background-color: #f2f2f2;
     }
include nav 
include attend 
.container.mt-5
  h2 Checked Out Babies
  .table-responsive
    table.table.table-bordered
      thead
        tr
          th Baby Name
          th Person Who Picked
          th Contact of Person
          th Comments
          th Time Checked Out
          th Action
      tbody
         each baby in babies
            tr
              td #{baby.babyName}
              td #{baby.personPickingUp}
              td #{baby.contactNumber}
              td #{baby.checkoutNotes}
              td #{baby.checkoutTime}
              td
                a.btn.btn-success(href='/checkoutupdate/'+baby._id) Update
include footer                  
// Bootstrap JS and dependencies (e.g., Chart.js)
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')  
