doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Add New Record - Daycare Accounts Department
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/style.css')
  style.
    /* Custom CSS styles */
    .form-container {
    border: 2px solid #ccc;
    border-radius: 10px;
    background-color: #fff;
    padding: 20px;
    color: black;
    }
include nav 
include buttonBar
br
a.btn.btn-primary(href='/accrecords') Accounts Record's History
.container.mt-5
  h2.text-center.mb-4 Accounts
  // Record Form
  .row.justify-content-center
    .col-md-6.form-container
      h4.text-center.mb-4 Add New Record
      form(action='/accounts' method='POST')
        .form-group
          label Select Record Type:
          br
          .form-check.form-check-inline
            input#expenseRadio.form-check-input(type='radio' name='recordType' value='Expense' checked='')
            label.form-check-label(for='expenseRadio') Expense (Money Spent)
          .form-check.form-check-inline
            input#incomeRadio.form-check-input(type='radio' name='recordType' value='Income')
            label.form-check-label(for='incomeRadio') Income (Money Paid to Daycare)
        .form-group
          label(for='recordRefNo') Reference Number:
          input#recordRefNo.form-control(type='text' name='recordRefNo')
        .form-group
          label(for='recordDate') Date:
          input#recordDate.form-control(type='date' name='recordDate')
        .form-group
          label(for='recordDescription') Description:
          input#recordDescription.form-control(type='text' name='recordDescription')
        .form-group
          label(for='recordAmount') Amount (UGX):
          input#recordAmount.form-control(type='number' name='recordAmount' min='0' step='0.01' placeholder='Enter amount in UGX')
        button.btn.btn-primary.btn-block(type='submit') Add Record
br        
include footer      
// Bootstrap JS and dependencies (e.g., Chart.js)
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')