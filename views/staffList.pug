doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Registered Staff
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(rel='stylesheet' href='/css/style.css')
  style.
    table th,
    table td {
    border: 1px solid #ddd;
    padding: 8px;
    width:auto;
    text-align: center;
    }
    table th {
    background-color: #f2f2f2;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    background-color: #f2f2f2;
    }
include nav 
include buttonBar   
br
.container
  table.table.table-striped
    thead
      tr
        th Staff Number
        th Name
        th Role
        th Gender
        th Contact
        th NIN
        th Email Address
        th Level of Education
        th Next Of Kin
        th Action
    tbody#staffTableBody
      if staffmembers.length 
        each staff in staffmembers 
            tr 
              td #{staff.staffNumber}
              td #{staff.fullName}
              td #{staff.role}
              td #{staff.gender}
              td #{staff.phone}
              td #{staff.nin}
              td #{staff.email}
              td #{staff.education}
              td #{staff.nok}
              td 
                a.btn.btn-success(href="/RegUpdate/"+staff._id) Update 
              td  
                form(method="POST" action="/delete")
                  input(type="hidden" name="id" value=staff._id)
                  button.btn.btn-danger(type="submit") Delete
include footer                  
