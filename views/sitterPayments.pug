doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sitter payment
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link(rel='stylesheet' href='/css/style.css')
    style.
      .container {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      table th,
      table td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: center;
        vertical-align: middle;
      }
      table th {
        background-color: #f8f9fa;
        font-weight: bold;
        color: #333;
        text-transform: uppercase;
      }
      .table-hover tbody tr:hover {
        background-color: #f1f1f1;
      }
      .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 4px;
        border-radius: 25px;
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        border: none;
        cursor: pointer;
        font-weight: bold;
      }
      @media (max-width: 768px) {
        table, table thead, table tbody, table th, table td, table tr {
          display: block;
        }
        table thead tr {
          display: none;
        }
        table tr {
          margin-bottom: 1rem;
        }
        table td {
          text-align: right;
          padding-left: 50%;
          position: relative;
        }
        table td::before {
          content: attr(data-label);
          position: absolute;
          left: 0;
          width: 50%;
          padding-left: 10px;
          font-weight: bold;
          text-align: left;
        }
      }
  body
    include nav 
    include attend 
    a.btn.btn-secondary(href='/checkinHistory') Assignment History
    a.btn.btn-secondary(href='/accounts') Update Accounts Record  
    br
    br
    h3.text-center.mb-4 Daily Sitter Payment Calculator
    .container
      .table-container
        table.table.table-striped
          thead
            tr
              th Sitter
              th Assigned Babies Count
              th Payment (UGX)
          tbody
            each payment in sitterPayments
              tr
                td= payment.sitter
                td= payment.assignedBabiesCount
                td= payment.payment

    br                
    include footer
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
