doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Update Baby's info
  // Bootstrap CSS
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(rel='stylesheet' href='/css/style.css')
  style.
    #babyRegistrationForm {
      width: 600px;
      margin: 2vh auto 0 auto;
      padding: 20px;
      background-color: rgb(240, 240, 240);
      border-radius: 4px;
      font-size: 13.5px;
      color: black;
    }
    .error-message {
      color: red;
      font-size: 0.875rem;
    }
    .card-header {
      color: black;
    }
include nav    
include buttonBar
#form.container.mt-5
  .row.justify-content-center
    .col-md-8
      .card
        .card-header Babies Registration Form
        .card-body
          form#babyRegistrationForm(action='/babyUpdate?id='+baby._id method="POST" onsubmit='return validation(event)' name='validationForm' )
            // Child's Information
            h5 Child&apos;s Information
            .form-group
              label(for='childName') Child&apos;s Name
              input#childName.form-control(type='text' name='childName' value= baby.childName)
              #childNameError.error-message
            .form-group
              label(for='gender') Gender
              select#gender.form-control(name='gender')
                option(value='male' selected= baby.gender===baby.male) Male
                option(value='female' selected= baby.gender===baby.female) Female
              #genderError.error-message
            .form-group
              label(for='dateOfBirth') Date of Birth
              input#dateOfBirth.form-control(type='date' name='dateOfBirth' value= baby.dateOfBirth)
              #dateOfBirthError.error-message
              // Parental Responsibility
            .form-group
              label Who has parental responsibility?
              .form-check
                input#father.form-check-input(type='radio' name='parentResponsibility' value='father' checked= baby.parentResponsibility==='father')
                label.form-check-label(for='father') Father
              .form-check
                input#mother.form-check-input(type='radio' name='parentResponsibility' value='mother' checked= baby.parentResponsibility==='mother')
                label.form-check-label(for='mother') Mother
              .form-check
                input#both.form-check-input(type='radio' name='parentResponsibility' value='both' checked= baby.parentResponsibility==='both')
                label.form-check-label(for='both') Both
              .form-check
                input#other.form-check-input(type='radio' name='parentResponsibility' value='other' checked= baby.parentResponsibility==='other')
                label.form-check-label(for='other') Other
              #parentResponsibilityError.error-message
            // Parents' Information
            h5 Parents&apos; Information
            .form-group#fatherDetails
              label(for='fatherName') Father&apos;s Name
              input#fatherName.form-control(type='text' name='fatherName' value= baby.fatherName)
              #fatherNameError.error-message
              label(for='fatherPhone') Father&apos;s Telephone Number
              input#fatherPhone.form-control(type='tel' name='fatherPhone' value= baby.fatherPhone)
              #fatherPhoneError.error-message
              label(for='fatherEmail') Father&apos;s Email
              input#fatherEmail.form-control(type='email' name='fatherEmail' value= baby.fatherEmail)
              #fatherEmailError.error-message
              label(for='fatherNationality') Father&apos;s Nationality
              input#fatherNationality.form-control(type='text' name='fatherNationality' value= baby.fatherNationality)
              #fatherNationalityError.error-message
              label(for='fatherOccupation') Father&apos;s Occupation
              input#fatherOccupation.form-control(type='text' name='fatherOccupation' value= baby.fatherOccupation)
              #fatherOccupationError.error-message
            .form-group#motherDetails
              label(for='motherName') Mother&apos;s Name
              input#motherName.form-control(type='text' name='motherName' value= baby.motherName)
              #motherNameError.error-message
              label(for='motherPhone') Mother&apos;s Telephone Number
              input#motherPhone.form-control(type='tel' name='motherPhone' value= baby.motherPhone)
              #motherPhoneError.error-message
              label(for='motherEmail') Mother&apos;s Email
              input#motherEmail.form-control(type='email' name='motherEmail' value= baby.motherEmail)
              #motherEmailError.error-message
              label(for='motherNationality') Mother&apos;s Nationality
              input#motherNationality.form-control(type='text' name='motherNationality' value= baby.motherNationality)
              #motherNationalityError.error-message
              label(for='motherOccupation') Mother&apos;s Occupation
              input#motherOccupation.form-control(type='text' name='motherOccupation' value= baby.motherOccupation)
              #motherOccupationError.error-message
            // Other Information
            h5 Other Information
            .form-group
              label(for='location') Location
              input#location.form-control(type='text' name='location' value= baby.location)
              #locationError.error-message
            .form-group
              label(for='nationality') Nationality
              input#nationality.form-control(type='text' name='nationality' value= baby.nationality)
              #nationalityError.error-message
            .form-group
              label(for='religion') Religion
              input#religion.form-control(type='text' name='religion' value= baby.religion)
              #religionError.error-message
            // Medical Details
            h5 Medical Details
            .form-group
              label(for='medicalBackground') Medical Background
              textarea#medicalBackground.form-control(type='text' name='medicalBackground' rows='3' value=baby.medicalBackground)
              #medicalBackgroundError.error-message
            .form-group
              label(for='doctor') Doctor&apos;s Name
              input#doctor.form-control(type='text' name='doctor' value= baby.doctor)
              #doctorError.error-message
            .form-group
              label(for='doctorPhone') Doctor&apos;s Telephone Number
              input#doctorPhone.form-control(type='text' name='doctorPhone' value= baby.doctorPhone)
              #doctorPhoneError.error-message
            .form-group
              label(for='doctorEmail') Doctor&apos;s Email
              input#doctorEmail.form-control(type='email' name='doctorEmail' value= baby.doctorEmail)
              #doctorEmailError.error-message
            .form-group
              label(for='hospital') Hospital
              input#hospital.form-control(type='text' name='hospital' value= baby.hospital)
              #hospitalError.error-message
            .form-group
              label(for='babyNumber') Baby Number
              input#babyNumber.form-control(type='text' name='babyNumber' value= baby.babyNumber)
              #babyNumberError.error-message
            .form-group
              label Is the child an orphan?
              .form-check
                input#isOrphanYes.form-check-input(type='radio' name='isOrphan' value='yes' checked= baby.isOrphan==='yes')
                label.form-check-label(for='isOrphanYes') Yes
              .form-check
                input#isOrphanNo.form-check-input(type='radio' name='isOrphan' value='no' checked= baby.isOrphan==='no')
                label.form-check-label(for='isOrphanNo') No
            .form-group#guardianDetails(style='display: none')
              h5 Guardian&apos;s Details
              .form-group
                label(for='guardianName') Guardian&apos;s Name
                input#guardianName.form-control(type='text' name='guardianName' value= baby.guardianName)
                #guardianNameError.error-message
              .form-group
                label(for='guardianPhone') Guardian&apos;s Telephone Number
                input#guardianPhone.form-control(type='tel' name='guardianPhone' value= baby.guardianPhone)
                #guardianPhoneError.error-message
              .form-group
                label(for='guardianEmail') Guardian&apos;s Email
                input#guardianEmail.form-control(type='email' name='guardianEmail' value= baby.guardianEmail)
                #guardianEmailError.error-message
              .form-group
                label(for='relationshipStatus') Relationship Status with the Child
                input#relationshipStatus.form-control(type='text' name='relationshipStatus' value= baby.relationshipStatus)
                #relationshipStatusError.error-message
            button.btn.btn-primary(type='submit') Update
br
include footer
