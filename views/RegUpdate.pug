doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Stuff Update
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(rel='stylesheet' href='/css/style.css')
  style.
    #sitterRegistrationForm {
    width: 560px;
    margin: 2vh auto 0 auto;
    padding: 20px;
    background-color: rgb(240, 240, 240);
    border-radius: 4px;
    text-align:left;
    font-size: 13.5px;
    color: black;
    }
    .card-header {
    color: black;
    }
   
include nav    
include buttonBar
br
#form.container.mt-5
  .row.justify-content-center
    .col-md-8
      .card
        .card-header Staff Registration Form
        .card-body
          form#sitterRegistrationForm(action='/RegUpdate?id='+staff._id  method='POST'  onsubmit='return validation(event)' name='validationForm')
            // Stuff's Information
            .form-group
              label(for='fullName') Full Name
              input#fullName.form-control(type='text' name='fullName' value=staff.fullName)
              #fullNameError.error-message
            .form-group
              label(for='gender') Gender
              select#gender.form-control(name='gender')
                option(value='male' selected= staff.gender===staff.male) Male
                option(value='female' selected= staff.gender===staff.female) Female
              #genderError.error-message
            .form-group
              label(for='dateOfBirth') Date of Birth
              input#dateOfBirth.form-control(type='date' name='dateOfBirth' value= staff.dateOfBirth)
              #dateOfBirthError.error-message
            .form-group
              label(for='religion') Religion
              input#religion.form-control(type='text' name='religion' value= staff.religion)
              #religionError.error-message
            .form-group
              label(for='phone') Telephone Number
              input#phone.form-control(type='tel' name='phone' value= staff.phone)
              #phoneError.error-message
            .form-group
              label(for='email') Email
              input#email.form-control(type='email' name='email' value= staff.email)
              #emailError.error-message
            .form-group
              label(for='nationality') Nationality
              input#nationality.form-control(type='text' name='nationality' value= staff.nationality)
              #nationalityError.error-message
            .form-group
              label(for='nin') National ID Number (NIN)
              input#nin.form-control(type='text' name='nin' value= staff.nin)
              #ninError.error-message
            .form-group
              label(for='nok') Next of Kin
              input#nok.form-control(type='text' name='nok' value= staff.nok)
              #nokError.error-message
            .form-group
              label(for='education') Level of Education
              input#education.form-control(type='text' name='education' value= staff.education)
              #educationError.error-message
            .form-group
              label(for='recommendersName') Recommender&apos;s Name
              input#recommendersName.form-control(type='text' name='recommendersName' value= staff.recommendersName)
              #recommendersNameError.error-message
            .form-group.form-check
              input#kabalagaResident.form-check-input(type='checkbox' name='kabalagaResident' value= 'yes' checked= staff.kabalagaResident==='yes')
              label.form-check-label(for='kabalagaResident') Is a resident of Kabalaga.
              #kabalagaResidentError.error-message
            .form-group
              label(for='role') Role 
              input#role.form-control(type='text' name='role' value= staff.role)
              #roleError.error-message
            .form-group
              label(for='staffNumber') Staff Number
              input#education.form-control(type='text' name='staffNumber' value= staff.staffNumber)
              #staffNumberError.error-message
            button.btn.btn-primary(type='submit') Update
br
include footer
