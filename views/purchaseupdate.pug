doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Update Purchase
  link(rel='stylesheet' href='/css/style.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  style.
    .container {
    max-width: 100px;
    margin: 2vh auto 0 auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 4px;
    color: black;
    }
include nav
include buttonBar
.container
  h2 Update Purchase
  form#updateItemForm(action=`/purchase/update/${purchase._id}` method='POST')
    .form-group
      label(for='itemName') Item Name:
      input#itemName.form-control(type='text' name='itemName' value=purchase.itemName)
      #itemNameError.error-message
    .form-group
      label(for='itemPrice') Unit(Kg,L,pcs):
      input#itemUnit.form-control(type='text' name='itemUnit' value=purchase.itemUnit)
      #itemUnitError.error-message
    .form-group
      label(for='itemPrice') Item Price (UGX):
      input#itemPrice.form-control(type='number' name='itemPrice' value=purchase.itemPrice)
      #itemPriceError.error-message
    .form-group
      label(for='itemDescription') Description:
      input#itemDescription.form-control(type='text' name='itemDescription' value=purchase.itemDescription)
      #itemDescriptionError.error-message
    .form-group
      label(for='itemImage') Item Image:
      input#itemImage.form-control-file(type='file' accept='image/*' name='itemImage' value=purchase.itemItem)
      #itemImageError.error-message
    .form-group
    button.btn.btn-primary(type='submit') Update
br
include footer
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
