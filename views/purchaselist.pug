doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Purchase List
  link(rel='stylesheet' href='/css/style.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
include nav
include buttonBar
.container
  table.table
    thead
      tr
        th Item Name
        th Unit
        th Price (UGX)
        th Description
        th Image
        th Action
    tbody#purchaseTableBody
      if purchases.length 
        each purchase in purchases 
          tr
            td #{purchase.itemName }
            td #{purchase.itemUnit}
            td #{purchase.itemPrice}
            td #{purchase.itemDescription}
            td
              img(src=purchase.itemImage, alt='Item Image', style='max-width: 100px;')
            td
              a.btn.btn-danger(href=`/purchase/update/${purchase._id}`) Update 
              form(method="POST" action="/delete")
                input(type="hidden" name="id" value=purchase._id)
                button.btn.btn-primary(type="submit") Delete

include footer
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
