doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Checked-in Babies
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", rel="stylesheet")
    style.
     table th,
     table td {
     border: 1px solid #ddd;
     padding: 8px;
     width:auto;
     text-align: center;
     }
     table th {
     background-color: #f2f2f2;
     }
     table {
     width: 100%;
     border-collapse: collapse;
     background-color: #f2f2f2;
     }
  body
    include nav 
    include attend
    .container.mt-4
      h2 Checked-in Babies
      table.table
        thead
          tr
            th Baby Name
            th Person Who Brought
            th Contact
            th Period of Stay
            th Sitter Assigned
            th Check-in Time
            th Actions
        tbody
          each baby in babies
            tr
              td #{baby.babyName}
              td #{baby.personBrought}
              td #{baby.contactBrought}
              td #{baby.periodOfStay}
              td #{baby.sitter ? baby.sitter.fullName : ''}
              td #{baby.checkinTime}
              td
                a.btn.btn-primary.btn-sm(type="button", href=`/checkinupdate/${baby._id}`) Update
              td
                form(action=`/checkedin/${baby._id}`, method="POST")
                   input(type="hidden", name="_method", value="DELETE")
                   button.btn.btn-danger.btn-sm(type="submit") Delete  
              td  
                a.btn.btn-success.btn-sm(type="button", href=`/checkout/${baby._id}`) Checkout

    include footer               
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
