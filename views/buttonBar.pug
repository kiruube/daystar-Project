doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Button Bar
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(rel='stylesheet' href='css/style.css')
  style.
    #logoutButton i {
    font-size: 1.2em;
    color: white;
    color: rgb(0, 0, 0);
    }
    .button-bar {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #9ea9f0;
    margin-bottom: 20px;
    align-items: center;
    display: flex;
    justify-content: space-between;
    padding-top: 10px;
    padding-left: 25px;
    padding-right: 25px;
    padding-bottom: 10px;
    }
    .button-bar .btn {
    margin-right: 10px;
    }
    .btn {
    padding: 10px 20px;
    cursor: pointer;
    color: rgb(0, 0, 0);
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    }
    .btn:hover {
    background-color: #aec7e2;
    }
    .btn-action {
    padding: 0.2rem 0.5rem;
    font-size: 0.9rem;
    }
    .btn i {
    margin-right: 10px;
    /* Add spacing between the icon and text */
    color: #000000;
    /* Adjust icon color for contrast */
    }
.button-bar
  button#btn-adminActivity.btn(onclick="navigateToHtml('../views/admin-activity.html')") Activity
  button#btn-adminBabyReg.btn(onclick="navigateToHtml('../views/admin-babyreg.html')") Baby Registration
  button#btn-adminSitterReg.btn(onclick="navigateToHtml('../views/admin-sitterreg.html')") Sitter Registration
  button#btn-adminBabies.btn(onclick="navigateToHtml('../views/admin-babies.html')") Registered Babies
  button#btn-adminStuff.btn(onclick="navigateToHtml('../views/admin-stuff.html')") Registered Stuff
  div
    // Logout Icon Button
    button#logoutButton.btn(onclick="logout((href ='/logout', logout))")
      i.fas.fa-power-off
      |  Logout
